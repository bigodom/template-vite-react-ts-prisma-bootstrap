generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  login    String @unique
  password String
  role     String

  @@map("users")
}

model Beneficio {
  id                 Int      @id @default(autoincrement())
  valor              Float
  id_comprador       Int
  prazo_de_pagamento DateTime
  situacao           String
  data_de_cadastro   DateTime @default(now())
  tipo_de_baixa      String
  nome               String
  obs                String?

  Comprador Comprador @relation(fields: [id_comprador], references: [id])

  @@map("beneficios")
}

model Comprador {
  id         Int         @id
  nome       String
  beneficios Beneficio[]

  @@map("compradores")
}
